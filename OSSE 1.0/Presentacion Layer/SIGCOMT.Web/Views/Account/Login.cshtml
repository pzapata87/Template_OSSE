@using SIGCOMT.Resources
@model SIGCOMT.DTO.LogInDto
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-signin">
    <div class="panel-body">
        <div class="logo text-center">
            <img src="@Url.Content("~/images/logo-primary.png")" alt="Chain Logo">
        </div>
        <br />
        <div class="mb30"></div>

        @using (Html.BeginForm("Login", "Account", new { area = "" }, FormMethod.Post, new { id = "frmLogin" }))
        {
            @Html.AntiForgeryToken()

            <div class="input-group mb15">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(model => model.UserName, new { @placeholder = Usuario.UserName_Display, @class = "form-control" })
            </div>
            <div class="input-group mb15">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                @Html.PasswordFor(model => model.Password, new { @placeholder = Usuario.Password_Display, @class = "form-control" })
            </div>
            <div class="clearfix">
                <div class="pull-right">
                    <button type="submit" class="btn btn-success" id="btnLogOn">@Master.IniciarSesion <i class="fa fa-angle-right ml5"></i></button>
                </div>
            </div>
        }
    </div>
</div>

@section ScriptContent
{
    <script src="@Url.Content("~/Content/ViewJs/Login.js")"></script>
}